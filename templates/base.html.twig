<!doctype html>
<html lang="en" class="h-100">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Martyn Wheeler">

    {% block stylesheets %}
      <!-- Latest compiled and minified CSS -->
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
      <!-- Extra styles -->
      <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
      <link rel="stylesheet" href="{{ asset('assets/css/century.css') }}">
    {% endblock %}

    <title>{% block title %}{% endblock %}</title>
  </head>
  <body class="d-flex flex-column h-100">
	<header>
      <!-- Fixed navbar -->
      <nav class="navbar navbar-expand-xl navbar-dark bg-dark">
        <div class="container-fluid">
          <!-- Navbar brand link -->
          <a class="navbar-brand" href="{{ path('homepage') }}"><img src="{{ asset('assets/img/lfcc_logo.png') }}" width="35" height="35" class="d-inline-block align-center" alt=""/> Century Challenge</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <!-- Main collapsable navbar-->
          <div class="collapse navbar-collapse" id="navbarCollapse">
            <!-- Left hand links-->
            <ul class="navbar-nav me-auto mb-2 mb-md-0">
              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="{{ path('homepage') }}">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="{{ path('rules') }}">Rules</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="{{ path('leaderboard') }}">Leaderboard</a>
              </li>
              {% if is_granted('ROLE_USER') %}
              <li class="nav-item">
                <a class="nav-link" href="{{ path('displayrides', {'username': app.user.useridentifier}) }}">
                  Your Rides
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="{{ path('addride') }}"><i class="fas fa-biking"></i> Add</a>
              </li>
              {% endif %}
            </ul>

            <!-- Right hand links-->
            <ul class="navbar-nav ms-auto">
			  <li class="nav-item">
	    		<a class="nav-link" href="{{ path('contact') }}"><i class="fas fa-envelope-square"></i> Contact</a>
	  		  </li>
        	  {% if is_granted('ROLE_ADMIN') %}
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-tools"></i> Admin
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
					<li><a class="dropdown-item" aria-current="page" href="{{ path('easyadmin') }}">EasyAdmin</a></li>
					<li><a class="dropdown-item" aria-current="page" href="{{ path('email') }}">Email</a></li>
                </ul>
              </li>
			  {% endif %}
			  {% if is_granted('ROLE_USER') %}
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-user"></i> {{ app.user.useridentifier }}
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                  <li><a class="dropdown-item" aria-current="page" href="{{ path('connect') }}">Connect Services</a></li>
                  <li><a class="dropdown-item" aria-current="page" href="{{ path('editprofile', {'username': app.user.useridentifier}) }}">Edit profile</a></li>
                  <li><a class="dropdown-item" aria-current="page" href="{{ path('changepassword', {'username': app.user.useridentifier}) }}">Change password</a></li>
                  <li><a class="dropdown-item" aria-current="page" href="{{ path('logout') }}"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                </ul>
              </li>
			  {% else %}
			  <li class="nav-item">
				<a class="nav-link" aria-current="page" href="{{ path('login') }}"><i class="fas fa-sign-in-alt"></i> Sign in</a>
	  		  </li>
			  {% endif %}
            </ul>
          </div>
        </div>
      </nav>
	</header>
	<!-- Begin page content -->
  <main class="flex-shrink-0">
    <div class="container">
      {% for type, messages in app.session.flashbag.all() %}
        {% for message in messages %}
        <div class="alert alert-{{ type }} alert-dismissible text-center col-sm-8 col-md-8 mx-auto" role="alert">
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          {{ message | raw }}
        </div>
        {% endfor %}
      {% endfor %}
      {% block body %}{% endblock %}
    </div>
	</main>

  <footer class="footer mt-auto py-3 bg-light">
    <div class="container">
      <span class="text-muted">
        <img src="{{ asset('assets/img/compatible with strava/cptblWith_strava_light/api_logo_cptblWith_strava_horiz_light.png') }}" height="48"alt=""/>
      </span>
    </div>
  </footer>

  {% block javascripts %}
    <!-- Latest compiled and minified JavaScript -->
	  <script src="https://kit.fontawesome.com/749f72dee1.js" crossorigin="anonymous"></script>
	  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  {% endblock %}
  </body>
</html>
