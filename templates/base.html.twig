<!doctype html>
<html lang="en" class="h-100">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Martyn Wheeler">
    <link rel="shortcut icon" href="{{ asset('build/images/favicon.ico') }}" type="image/x-icon" />

    {% block stylesheets %}
      {{ encore_entry_link_tags('app') }}
    {% endblock %}

    <title>{% block title %}{% endblock %}</title>
  </head>
  <body class="d-flex flex-column h-100">
	<header>
      <!-- Fixed navbar -->
      <nav class="navbar navbar-expand-xl navbar-dark bg-dark">
        <div class="container-fluid">
          <!-- Navbar brand link -->
          <a class="navbar-brand" href="{{ path('homepage') }}"><img src="{{ asset('build/images/lfcc_logo.png') }}" width="35" height="35" class="d-inline-block align-center" alt=""/> Century Challenge</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <!-- Main collapsable navbar-->
          <div class="collapse navbar-collapse" id="navbarCollapse">
            <!-- Left hand links-->
            <ul class="navbar-nav me-auto mb-2 mb-md-0">
              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="{{ path('homepage') }}">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="{{ path('rules') }}">Rules</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="{{ path('leaderboard') }}">Leaderboard</a>
              </li>
              {% if is_granted('ROLE_USER') %}
              <li class="nav-item">
                <a class="nav-link" href="{{ path('displayrides', {'username': app.user.useridentifier}) }}">
                  Your Rides
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="{{ path('app_add_ride') }}"><i class="fas fa-biking"></i> Add</a>
              </li>
              {% endif %}
            </ul>

            <!-- Right hand links-->
            <ul class="navbar-nav ms-auto">
			  <li class="nav-item">
	    		<a class="nav-link" href="{{ path('contact') }}"><i class="fas fa-envelope-square"></i> Contact</a>
	  		  </li>
        	  {% if is_granted('ROLE_ADMIN') %}
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-tools"></i> Admin
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
			      		  <li><a class="dropdown-item" aria-current="page" href="{{ path('email') }}">Email</a></li>
					        <li><a class="dropdown-item" aria-current="page" href="{{ path('listusers') }}">List Users</a></li>
      					  <li><a class="dropdown-item" aria-current="page" href="{{ path('easyadmin') }}">EasyAdmin</a></li>
      					  <li><a class="dropdown-item" aria-current="page" href="{{ path('dukecity_command_scheduler_list') }}">Scheduler</a></li>
                </ul>
              </li>
			  {% endif %}
			  {% if is_granted('ROLE_USER') %}
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  {% if gravatar_exists(app.user.email) %}
              		  <img src="{{ gravatar(app.user.email, 25) }}" />
		              {% else %}
                    <i class="fas fa-user"></i>
		              {% endif %} {{ app.user.useridentifier }}
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                  <li><a class="dropdown-item" aria-current="page" href="{{ path('editprofile', {'username': app.user.useridentifier}) }}">Edit profile</a></li>
                  <li><a class="dropdown-item" aria-current="page" href="{{ path('updatepassword', {'username': app.user.useridentifier}) }}">Change password</a></li>
                  <li><a class="dropdown-item" aria-current="page" href="{{ path('connect') }}">Connect Services</a></li>
                  {% if app.user.stravaid and app.user.stravarefreshtoken %}
                    <li><a class="dropdown-item" aria-current="page" href="{{ path('deauthorize_strava') }}">Disconnect Strava</a></li>
                  {% endif %}
                  {% if app.user.komootid and app.user.komootrefreshtoken %}
                    <li><a class="dropdown-item" aria-current="page" href="{{ path('deauthorize_komoot') }}">Disconnect Komoot</a></li>
                  {% endif %}
                  <li><a class="dropdown-item" aria-current="page" href="{{ path('logout') }}"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                </ul>
              </li>
			  {% else %}
			  <li class="nav-item">
				<a class="nav-link" aria-current="page" href="{{ path('login') }}"><i class="fas fa-sign-in-alt"></i> Sign in</a>
	  		  </li>
			  {% endif %}
            </ul>
          </div>
        </div>
      </nav>
	</header>
	<!-- Begin page content -->
  <main class="flex-shrink-0">
    <div class="container">
      {% for type, messages in app.session.flashbag.all() %}
        {% for message in messages %}
        <div class="alert alert-{{ type }} alert-dismissible text-center col-sm-8 col-md-8 mx-auto" role="alert">
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          {{ message | raw }}
        </div>
        {% endfor %}
      {% endfor %}
      {% block body %}{% endblock %}
    </div>
	</main>

  <footer class="footer mt-auto py-3 bg-light">
    <div class="container">
      <span class="text-muted">
        <img src="{{ asset('build/images/compatible_with_strava/cptblWith_strava_light/api_logo_cptblWith_strava_horiz_light.png') }}" height="48"alt=""/>
      </span>
    </div>
  </footer>

  {% block javascripts %}
    {{ encore_entry_script_tags('app') }}
  {% endblock %}
  </body>
</html>
