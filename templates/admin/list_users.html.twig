{% extends 'base.html.twig' %}
{% block title %}List Users{% endblock %}
{% block body %}
<h1>List Users</h1>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-sm">
    <thead>
      <tr>
        <th style="width:40px">Rank</th>
        <th>Name</th>
        <th>Username</th>
        <th>Email</th>
      </tr>
    </thead>
    <tbody>
      {% set counter = 0 %}
      {% for user in users %}
      <tr>
        <td style="width:40px; text-align:right">
          {% set counter = counter + 1 %}{{ counter }}
        </td>
        <td>
          <a href="{{ path('app_display_rides', {'username': user.useridentifier}) }}">{{ user.forename }} {{ user.surname }}</a>
        </td>
        <td>
          {{ user.username }}				
        </td>
        <td>
          {{ user.email }}				
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}
