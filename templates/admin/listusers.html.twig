{% extends 'base.html.twig' %}
{% block title %}List Users{% endblock %}
{% block body %}
<h1>List Users</h1>
<table class="table table-striped table-bordered table-sm table-responsive-sm">
  <thead>
    <tr>
      <th style="width:40px">Rank</th>
      <th>Name</th>
      <th>Username</th>
      <th>Email</th>
    </tr>
  </thead>
  <tbody>
    {% set counter = 0 %}
    {% for user in users %}
    <tr>
      <td style="width:40px; text-align:right">
	{% set counter = counter + 1 %}{{ counter }}
      </td>
      <td>
        {% if is_granted('ROLE_USER') %}
        <a href="{{ path('displayrides', {'username': user.username}) }}">{{ user.forename }} {{ user.surname }}</a>
        {% else %}
        {{ user.privatename }}
        {% endif %}
            </td>
      <td>
      	{{ user.username }}				
      </td>
      <td>
      	{{ user.email }}				
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>
{% endblock %}
