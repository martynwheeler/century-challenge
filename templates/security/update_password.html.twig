{% extends 'base.html.twig' %}
{% block title %}Change Password{% endblock %}
{% block body %}
<h3 class="text-center">Change password</h3>
<div class="form form-password-reset">
  {{ form_start(updatePasswordForm) }}
    <div class="form-floating mb-2 mt-1">
      {{ form_widget(updatePasswordForm.oldPassword) }}
			{{ form_label(updatePasswordForm.oldPassword) }}
      {{ form_errors(updatePasswordForm.oldPassword) }}
    </div>
    <div class="form-floating mb-2">
      {{ form_widget(updatePasswordForm.newPassword.first) }}
			{{ form_label(updatePasswordForm.newPassword.first) }}
      {{ form_errors(updatePasswordForm.newPassword.first) }}
    </div>
    <div class="form-floating mb-3">
      {{ form_widget(updatePasswordForm.newPassword.second) }}
			{{ form_label(updatePasswordForm.newPassword.second) }}
    </div>
    <button type="submit" class="btn btn-primary" name="submit">Submit</button>
  {{ form_end(updatePasswordForm) }}
</div>
{% endblock %}
